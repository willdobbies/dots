bar {
  status_command i3blocks
  i3bar_command   i3bar
  #font pango:monospace 10
  #font pango: FontAwesome Regular 10

  position top
  colors {
	  #background #00000099
	  background #111111
  }
}

bindsym $mod+shift+b bar mode toggle

default_border pixel 3
hide_edge_borders smart

gaps inner 10
smart_gaps off
